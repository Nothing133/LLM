from langchain.indexes import VectorstoreIndexCreator
from langchain_community.document_loaders.base import Document
from langchain_community.utilities import ApifyWrapper
import os

# Setting environment variables
os.environ["OPENAI_API_KEY"] = "OPENAI_API_KEY"
os.environ["APIFY_API_TOKEN"] = "APIFY_API_TOKEN"

# Creating an ApifyWrapper instance
apify = ApifyWrapper()

# Calling the Apify actor
loader = apify.call_actor(
    actor_id="apify/website-content-crawler",
    run_input={"startUrls": [{"url": "https://www.gadgets360.com/mobile-recharge-plans/airtel-prepaid"}]},
    dataset_mapping_function=lambda item: Document(
        page_content=item["text"] or "", metadata={"source": item["url"]}
    ),
)

# Creating a Vectorstore index
index = VectorstoreIndexCreator().from_loaders([loader])

# Querying the index
query = "What is Airtel recharge plan available?"
result = index.query_with_sources(query)

# Printing the results
print(result["answer"])
print(result["sources"])
